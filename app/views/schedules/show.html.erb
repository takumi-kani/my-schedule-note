<h1>タイトル</h1>
<%= @schedule.title %>

<h3>開始日時</h3>
<%= @schedule.start_time.strftime("%m/%d(#{%w(日 月 火 水 木 金 土)[@schedule.created_at.wday]}) %H:%M") %>

<h3>終了日時</h3>
<%= @schedule.end_time.strftime("%m/%d(#{%w(日 月 火 水 木 金 土)[@schedule.created_at.wday]}) %H:%M") %>

<h3>場所</h3>
<%= @schedule.place %>

<h3>内容</h3>
<%= @schedule.info %>

<p><%= link_to "カレンダーに戻る", root_path %></p>